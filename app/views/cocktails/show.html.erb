    <div class="col-xs-12" align="center">
      <%  @cocktail.doses.each do |dose| %>
      <h5><%=  dose.ingredient.name %> - <%=  dose.description %> <%= link_to '', dose_path(dose), data: {:confirm => 'Are you sure?'}, :method => :delete, :class => 'glyphicon glyphicon-trash', style:"color: black" %></h5>
      <% end %>
    </div>
  </div>
</div>

