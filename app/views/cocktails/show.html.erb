    <div class="col-xs-12" align="center" >
      <h1><%=  @cocktail.name %></h1>
    </div>
  </div>
  <div class="card-show">
    <div class="row">
      <div class="col-xs-12" align="center" >
        <%= cl_image_tag @cocktail.photo.url(), height: 250, width: 350, crop: :fill %>
